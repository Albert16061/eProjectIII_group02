@model Dr4rum_eProjectIII.Models.Topic
    <div class="modal-header">
        <h3 class="modal- title">Are you sure you want to delete this?</h3>
        <button type="button" class="close" data-dismiss="modal" ariahidden="true">×</button>
    </div>
    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-sm-12">Topic Title</div>
                            <div class="col-sm-12">
                                @Html.TextBoxFor(model => model.Topic_Title, new { @class = "formcontrol required", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">Post By</div>
                            <div class="col-sm-12">
                                @Html.TextBoxFor(model => model.Account.UserName, new { @class = "formcontrol required", @disabled = "disabled" })
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" id="btnDelete" ct_ma="@Model.Topic_Title" value="Delete"
                               class="btn btn-default btn-primary" />
                        <button class="btn btn-warning" data-dismiss="modal">Close</button>
                    </div>
           </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}