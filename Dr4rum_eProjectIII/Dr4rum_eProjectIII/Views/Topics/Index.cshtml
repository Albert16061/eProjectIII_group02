                @*Hàm chạy r, vấn đề giống tui hồi nãy
                        *@
                

                

                @*@Html.ActionLink("Edit", "Edit", new { id = item.Topic_Title }) |*@
                @*<p class="btmartop"><button type="button" class="btn btn-danger btn-control btnDelete" data-toggle="modal" data-target="#myModal">Delete</button></p>*@
                @*@Html.Raw("<a data-modal='' href='/Topics/_PartialDelete/" + item.Topic_Title + "' id='" + item.Topic_Title + "' title='Delete'> <span class='btn btn-danger'>Delete</span> </a>")*@
                @*  *@
                @*@Html.Raw("<a data-toggle='modal' data-target='#myModal'> <span class='btn btn-info'>Delete</span> </a>")*@
            </td>
        </tr>
    }
</table>




