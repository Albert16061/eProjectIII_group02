@model Dr4rum_eProjectIII.Models.Group

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner-->
<div class="Banner-containt">
    <img src="~/Image/Banner_Pic/Admin/adminIndex_banner.jpg" class="img-fluid" alt="Responsive image">
    <div class="Banner-title-containt">
        <p class="Banner-title-info"> Groups Page</p>
        <p class="Banner-title-info" id="Banner-child"> Welcome to Groups Page, Let's manager your Page !</p>
    </div>
</div>
<!-- breadcrumb-->
<div class="breadcrumb-containt">
    <div class="btn-group btn-breadcrumb breadcrumb-primary">
        <a href="@Url.Action("Index", "AdminIndex")" class="btn btn-primary"><img src="~/Image/Logo_Icon/home-50.png" class="navbar-logo" alt="Site Logo" /></a>
        @Html.ActionLink("Home", "Index", "AdminIndex", null, new { @class = "btn btn-primary breadcrumb-link" })
        <div class="btn btn-info c-info breadcrumb-link"> Create Group </div>
    </div>
</div>
<!-- Information -->
<div class="index-list-containt">
    <div class="index-list">
        <h2>Create</h2>
        @if (null != ViewBag.err)
        {
            <script>alert("@ViewBag.err")</script>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Group Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Group_Name, new { htmlAttributes = new { @class = "form-control", id = "title" } })
                        @Html.ValidationMessageFor(model => model.Group_Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" hidden>
                    @Html.LabelFor(Model => Model.SetV, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="radio">
                            <label>@Html.RadioButtonFor(Model => Model.SetV, true, new { @checked = true })</label>
                        </div>
                    </div>
                </div>

                <div class="form-group row" style="margin-left: 1px">
                    <div class=" col-lg-1 col-md-2 col-sm-3 col-4">
                        <!-- thay buton thanh the a va input-->
                        <a onclick="return confirmAction()" href="~/Views/Groups/Index.cshtml" target="_parent"><input type="submit" onclick="confirmAction()" value="Create"  class="btn btn-success"/></a>
                    </div>  
                    <div class=" col-lg-1 col-md-2 col-sm-3 col-4">
                        @Html.ActionLink("Back to List", "Index","Groups",null,new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <!--thay javascrpit moi-->
<script type="text/javascript">
    function confirmAction() {
        return confirm("The name of category is unique. After you create, you can not edit. Are you sure you want to create?")
    }
</script>
}
