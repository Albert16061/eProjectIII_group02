@model IEnumerable<Dr4rum_eProjectIII.Models.Category>
<!-- Banner-->
<img src="~/Image/Banner_Pic/topic.jpg" class="img-fluid" alt="Responsive image">
@foreach (var Caterory in Model)
{
    <!-- breadcrumb-->
    <div class="breadcrumb-containt">
        <div class="btn-group btn-breadcrumb breadcrumb-primary">
            <a href="@Url.Action("Index", "Index")" class="btn btn-primary"><img src="~/Image/Logo_Icon/home-50.png" class="navbar-logo" alt="Site Logo" /></a>
            <a href="@Url.Action("Index", "Index")" class="btn btn-primary breadcrumb-link ">Home</a>
            <!--
                   <a href="#" class="btn btn-primary visible-lg-block visible-md-block">Breadcrumbs text</a>
                   <a href="#" class="btn btn-primary visible-lg-block visible-md-block">Section</a>
                   <a href="#" class="btn btn-primary visible-lg-block visible-md-block">Category</a>
               -->
            <div class="btn btn-info c-info breadcrumb-link"> @Caterory.Category_Name </div>
        </div>
    </div>
    <div class="info-containt">
        <h2>@Caterory.Category_Name</h2>
        <div class="category-topic-containt">
            @foreach (var Topic in Caterory.Topics.ToList())
            {
                <div class="alert-info category-topic-info ">
                    <div>
                        @Topic.Category_Name
                    </div>
                    <div>
                        @Topic.date
                    </div>
                    <div>
                        @Topic.Posts.Count()
                    </div>
                    @foreach(var post in Topic.Posts.Take(1))
                    {
                        <div>
                            @post.Account.LastName
                        </div>
                    }
                </div>            
            }
        </div>
    </div>
}
