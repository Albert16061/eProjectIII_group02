@model Dr4rum_eProjectIII.Models.Post
<style>
    .TopicTitle {
        background-color: darkseagreen;
    }

        .TopicTitle > h5 {
            font-weight: bold;
            height: auto;
            padding-bottom: 5px !important;
            padding-top: 5px !important;
            padding-right: 5px !important;
            padding-left: 5px !important;
        }
    .BodyTile{
        border-bottom: 1px solid gray;
    }
</style>
<!--Header-->
<div class="modal-header TopicTitle">
    <h5 class="modal-title">
        Add Post
    </h5>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@using (Html.BeginForm("_PartialCreate", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form">
        <!-- Modal -->
        <div class="modal-body BodyTile">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Body -->
            <h5 class="modal-title ">
                @{
                    var topicTitle = TempData["data"];
                }
                @Html.TextBoxFor(model => model.Topic_Tile, new { @Value = topicTitle.ToString(), htmlAttributes = new { @class = "form-control" } })
            </h5>

            <div class="form-group row invisible">
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Acc_ID, new { @Value = 1, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Post Info</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Post_Info)
    @*, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Post_Info, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group invisible">
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Like_Num, new { @Value = 0, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group invisible">
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Dislike_Num, new { @Value = 0, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group invisible">
                <div class="col-md-10">
                    @{
                        DateTime currentDay = DateTime.Now;
                    }
                    @Html.TextBoxFor(model => model.date, new { @Value = currentDay, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="modal-footer">
            <input type="submit" value="Add" class="btn btn-default btn-primary" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
 }

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");

</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>
    <script type="text/javascript">
        var editor = CKEDITOR.instances['Post_Info'];
        if (editor) { editor.destroy(true); }
        CKEDITOR.replace('Post_Info', { enterMode: CKEDITOR.ENTER_BR, });
        CKFinder.setupCKEditor(null, '@Url.Content("~/Content/ckfinder/")');
        
    </script>
}


    