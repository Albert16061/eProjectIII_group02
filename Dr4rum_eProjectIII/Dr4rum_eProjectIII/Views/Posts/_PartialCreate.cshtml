@model Dr4rum_eProjectIII.Models.Post

<!--Header-->
<div class="modal-header">
    <h5 class="modal-title">
        Add Post
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form">
        <!-- Modal -->
        <div class="modal-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Body -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Topic_Tile, "Topic_Tile", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownList("Topic_Tile", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Topic_Tile, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row invisible">
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Acc_ID, new { @Value = 1, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Post Info</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Post_Info, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Post_Info, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group invisible">
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Like_Num, new { @Value = 0, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group invisible">
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Dislike_Num, new { @Value = 0, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group invisible">
                <div class="col-md-10">
                    @{
                        DateTime currentDay = DateTime.Now;
                    }
                    @Html.TextBoxFor(model => model.date, new { @Value = currentDay, htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="modal-footer">
            <input type="submit" value="Add" class="btn btn-default btn-primary" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
 }
<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>