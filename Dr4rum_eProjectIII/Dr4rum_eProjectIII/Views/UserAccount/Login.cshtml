@model Dr4rum_eProjectIII.Models.Account
@{
    ViewBag.Title = "Login";
}<h2>Login</h2>
@using (Html.BeginForm("Login", "UserAccount", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="Login-info-contain" style="border: 1px solid lightgray; border-radius: 5px; padding: 10px;">
        <div class="form-group row">
            <div class="control-label col-md-12 TopicDelete-title">Username</div>
            <div class="col-12">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="control-label col-md-12 TopicDelete-title">Password</div>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <span class="text-danger">@ViewBag.ErrorMessage</span>

    <div class="form-group" style="margin-top: 10px">
        <div class="row" style="margin-bottom:10px">
            <div class="col-12">    @Html.ActionLink("ForgetPassword ?", "ForgetPassword", "UserAccount", null, new { @class = "pt-2 pb-2 " })</div>        
        </div>
        <div class="row">
            <div class="col-3">
                <input type="submit" value="Log in" class="btn btn-success" />
            </div>
            <div class="col">
                @Html.ActionLink("Register", "Register", "UserAccount", null, new { @class = "btn btn-secondary" })
            </div>
        </div>       
    </div>
}
