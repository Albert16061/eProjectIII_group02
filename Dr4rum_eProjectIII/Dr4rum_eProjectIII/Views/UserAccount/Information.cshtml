@model Dr4rum_eProjectIII.Models.Account
@{
    ViewBag.Title = "Information";
}

<h2>Information</h2>
    <h3>Information</h3>
    <div class="container mt-5"></div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad frm-userinformation">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">User Information</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.FirstName)</td>
                                        <td>@Html.DisplayFor(m => m.FirstName)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.LastName)</td>
                                        <td>@Html.DisplayFor(m => m.LastName)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.Address)</td>
                                        <td>@Html.DisplayFor(m => m.Address)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.Phone)</td>
                                        <td>@Html.DisplayFor(m => m.Phone)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.Email)</td>
                                        <td>@Html.DisplayFor(m => m.Email)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.Gender)</td>
                                        @if (Model.Gender)
                                        {
                                            <td>Male</td>
                                        }
                                        else
                                        {
                                            <td>Female</td>
                                        }
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.Achievement)</td>
                                        <td>@Html.DisplayFor(m => m.Achievement)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.Experience)</td>
                                        <td>@Html.DisplayFor(m => m.Experience)</td>
                                    </tr>
                                    <tr>
                                        <td>@Html.LabelFor(m => m.Speciality)</td>
                                        <td>@Html.DisplayFor(m => m.Speciality)</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="d-flex justify-content-center col-md-6 mt-2">
                                    @Html.ActionLink("Edit your information", "EditInformation", "UserAccount", null, new { @class = "btn btn-primary" })
                                </div>
                                <div class="d-flex justify-content-center col-md-6 mt-2">
                                    @Html.ActionLink("Change your password", "ChangePassword", "UserAccount", null, new { @class = "btn btn-primary" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

