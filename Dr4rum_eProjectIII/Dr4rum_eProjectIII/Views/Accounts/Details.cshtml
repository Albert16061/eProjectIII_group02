@model Dr4rum_eProjectIII.Models.Account

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>avatar</dt>
        <dd><img src="~/Image/avt/@Model.Avatar" /></dd>
        <dt>
            User Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Password
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            Birthday
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Birthday)
        </dd>

        <dt>
            Phone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            Gender
        </dt>

        <dd>
            @if (Model.Gender == true)
            {
                <span>FeMale </span>
            }
            else
            {
                <span>Male</span>
            }
        </dd>

        <dt>
            Role
        </dt>

        <dd>
            @if (Model.Role == "A")
            {
                <span>Admin</span>
            }
            @if (Model.Role == "U")
            {
                <span>User</span>
            }
            @if (Model.Role == "D")
            {
                <span>Doctor</span>
            }
        </dd>

        <dt>
            Incognito
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Incognito)
        </dd>

        <dt>
            Speciality
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Speciality)
        </dd>

        <dt>
            Experience
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Experience)
        </dd>

        <dt>
            Achievement
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Achievement)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Acc_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
